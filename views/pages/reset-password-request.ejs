<%# views/pages/reset-password-request.ejs %>
<%# Pagina con il form dove l'utente inserisce la propria email per richiedere il reset della password. %>

<!doctype html>
<html lang="it">
<%- include('../partials/header') %>

<body class="d-flex flex-column min-vh-100">
  <%- include('../partials/navbar') %>

  <main class="container my-5">
    <div class="row justify-content-center">
      <div class="col-md-8 col-lg-6 col-xl-5">
        <div class="card shadow-sm">
          <div class="card-body p-4">
            <h3 class="card-title text-center mb-4"><%= title %></h3>
            <p class="text-center text-muted mb-4">Inserisci il tuo indirizzo email e ti invieremo un link per resettare la tua password.</p>
            
            <%- include('../partials/messages') %>

            <%# Il form invia l'email alla rotta /auth/reset. %>
            <form action="/auth/reset" method="POST">
              <div class="mb-3">
                <label for="email" class="form-label">Indirizzo Email</label>
                <input type="email" class="form-control" id="email" name="email" required>
              </div>
              <div class="d-grid">
                <button type="submit" class="btn btn-primary">Invia Link di Reset</button>
              </div>
            </form>
            <p class="text-center mt-4">
              <a href="/auth/login">Torna al Login</a>
            </p>
          </div>
        </div>
      </div>
    </div>
  </main>

  <%- include('../partials/footer') %>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>