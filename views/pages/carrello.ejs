<!doctype html>
<html lang="it">
<%- include('../partials/header') %>
<body class="d-flex flex-column min-vh-100">
<%- include('../partials/navbar') %>
    
<main class="container my-5">
    <h2 class="text-center mb-5">Il Tuo Carrello</h2>
    
    <%- include('../partials/messages') %>

    <% if (cart && cart.totalQty > 0) { %>
    <div class="row">
        <div class="col-lg-8">
            <div class="card shadow-sm mb-3">
                <div class="card-body">
                    <% for(let id in cart.items) { const product = cart.items[id]; %>
                    <div class="row align-items-center mb-3">
                        <div class="col-md-2">
                            <img src="<%= product.item.percorso_immagine %>" class="img-fluid rounded" alt="<%= product.item.nome %>">
                        </div>
                        <div class="col-md-4">
                            <h5 class="mb-0"><%= product.item.nome %></h5>
                            <p class="text-muted small mb-0">Venduto da <%= product.item.nome_venditore %></p>
                        </div>
                        <div class="col-md-2">
                            <input type="number" class="form-control text-center" value="<%= product.qty %>" min="1" disabled>
                        </div>
                        <div class="col-md-2 text-end">
                            <span class="fw-bold fs-5">€<%= product.price.toFixed(2) %></span>
                        </div>
                        <div class="col-md-2 text-end">
                            <form action="/carrello/remove/<%= product.item.id %>" method="POST">
                                <button type="submit" class="btn btn-outline-danger btn-sm" title="Rimuovi"><i class="bi bi-trash"></i></button>
                            </form>
                        </div>
                    </div>
                    <% if (Object.keys(cart.items).indexOf(id) < Object.keys(cart.items).length - 1) { %>
                        <hr>
                    <% } %>
                    <% } %>
                </div>
            </div>
            <a href="/" class="btn btn-outline-primary"><i class="bi bi-arrow-left"></i> Continua lo shopping</a>
        </div>

        <div class="col-lg-4">
            <div class="card shadow-sm">
                <div class="card-header"><h5 class="mb-0">Riepilogo Ordine</h5></div>
                <div class="card-body">
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item d-flex justify-content-between align-items-center border-0 px-0 pb-0">
                            Subtotale<span>€<%= cart.totalPrice.toFixed(2) %></span>
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-center border-0 px-0">
                            Spedizione<span>€5.00</span> </li>
                        <li class="list-group-item d-flex justify-content-between align-items-center border-0 px-0 mb-3">
                            <div><strong>Totale</strong></div>
                            <span><strong>€<%= (cart.totalPrice + 5).toFixed(2) %></strong></span>
                        </li>
                    </ul>
                    <a href="/carrello/checkout" class="btn btn-primary btn-lg w-100" role="button">Procedi al checkout</a>
                </div>
            </div>
        </div>
    </div>
    <% } else { %>
        <div class="text-center">
            <p class="lead">Il tuo carrello è vuoto.</p>
            <a href="/" class="btn btn-primary mt-3">Torna alla homepage</a>
        </div>
    <% } %>
</main>

<%- include('../partials/footer') %>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>