                            </div>
                            <div class="col-md-2">
                                <input type="number" class="form-control text-center quantity-input" value="2" min="1">
                            </div>
                            <div class="col-md-2 text-end">
                                <span class="fw-bold fs-5">€9,00</span>
                            </div>
                            <div class="col-md-2 text-end">
                                <button class="btn btn-outline-danger btn-sm" title="Rimuovi">
                                    <i class="bi bi-trash"></i>
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
                <a href="/" class="btn btn-outline-primary"><i class="bi bi-arrow-left"></i> Continua lo shopping</a>
            </div>

            <!-- Cart Summary -->
            <div class="col-lg-4">
                <div class="card shadow-sm">
                    <div class="card-header">
                        <h5 class="mb-0">Riepilogo Ordine</h5>
                    </div>
                    <div class="card-body">
                        <ul class="list-group list-group-flush">
                            <li class="list-group-item d-flex justify-content-between align-items-center border-0 px-0 pb-0">
                                Subtotale
                                <span>€58,99</span>
                            </li>
                            <li class="list-group-item d-flex justify-content-between align-items-center border-0 px-0">
                                Spedizione
                                <span>€5,00</span>
                            </li>
                            <li class="list-group-item d-flex justify-content-between align-items-center border-0 px-0 mb-3">
                                <div>
                                    <strong>Totale</strong>
                                </div>
                                <span><strong>€63,99</strong></span>
                            </li>
                        </ul>

                        <a href="checkout.html" class="btn btn-primary btn-lg w-100" role="button">
                            Procedi al checkout
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </main>

    <%- include('../partials/footer') %>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
