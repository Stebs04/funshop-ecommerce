<%# views/pages/search-results.ejs %>
<%# Pagina che mostra i risultati di una ricerca, suddivisi tra prodotti e utenti. %>
<%# Ora include anche un pulsante e un offcanvas per filtrare i risultati dei prodotti. %>

<!doctype html>
<html lang="it">
<%- include('../partials/header') %>
<body class="d-flex flex-column min-vh-100">
  
  <%- include('../partials/navbar') %>

  <main class="container my-5">
    <%- include('../partials/messages') %>
    
    <%# Titolo della pagina che include il termine di ricerca ('query') %>
    <h2 class="mb-4">Risultati della ricerca per: "<%= query %>"</h2>

    <%# Intestazione della sezione Prodotti %>
    <div class="d-flex justify-content-between align-items-center mb-4 pb-2">
      <h3 class="mb-0 border-bottom pb-2">Prodotti (<%= prodotti.length %>)</h3>
      <%# Pulsante che apre l'offcanvas per i filtri (aggiunto) %>
      <button class="btn btn-outline-primary" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasFilters" aria-controls="offcanvasFilters">
        <i class="bi bi-funnel-fill me-2"></i>Filtri
      </button>
    </div>

    <%# Sezione per i risultati dei prodotti %>
    <section id="product-results" class="mb-5">
      <%# Se sono stati trovati dei prodotti, li visualizza in una griglia. %>
      <% if (prodotti && prodotti.length > 0) { %>
        <div class="row g-4">
          <% prodotti.forEach(prodotto => { %>
            <%# La card del prodotto è identica a quella usata nella homepage. %>
            <div class="col-12 col-md-4 col-lg-3 mb-4">
              <div class="card h-100 shadow-sm product-card">
                <a href="/products/<%= prodotto.id %>" class="text-decoration-none">
                  <%# Mostra il badge "OFFERTA" se c'è un prezzo scontato %>
                  <% if (prodotto.prezzo_scontato && parseFloat(prodotto.prezzo_scontato) > 0) { %>
                    <div class="position-absolute top-0 end-0 bg-danger text-white px-2 py-1 m-2 rounded" style="z-index: 1;">OFFERTA</div>
                  <% } %>
  
                  <%# Utilizza l'immagine di copertina (la prima dell'array, alias 'percorso_immagine_cover') %>
                  <img src="<%= prodotto.percorso_immagine_cover %>" class="card-img-top" alt="<%= prodotto.nome %>" style="height: 200px; object-fit: cover;">
                </a>
                <div class="card-body d-flex flex-column">
                  <h5 class="card-title">
                    <a href="/products/<%= prodotto.id %>" class="text-decoration-none text-dark"><%= prodotto.nome %></a>
                  </h5>
                  <p class="card-text text-muted small"><%= prodotto.parola_chiave %></p>
                  <p class="card-text text-primary small">Venduto da <strong><a href="/member/<%= prodotto.user_id %>" class="text-decoration-none text-dark"><%= prodotto.nome_venditore %></a></strong></p>
                  
                  <div class="mt-auto d-flex justify-content-between align-items-center">
                    <%# Logica per mostrare il prezzo (scontato o intero) %>
                    <% if (prodotto.prezzo_scontato && parseFloat(prodotto.prezzo_scontato) > 0) { %>
                      <div>
                        <span class="text-muted text-decoration-line-through me-2">€<%= parseFloat(prodotto.prezzo).toFixed(2) %></span>
                        <span class="fw-bold fs-5 text-danger">€<%= parseFloat(prodotto.prezzo_scontato).toFixed(2) %></span>
                      </div>
                    <% } else { %>
                      <span class="fw-bold fs-5">€<%= parseFloat(prodotto.prezzo || 0).toFixed(2) %></span>
                    <% } %>
                    
                    <%# Form per aggiungere al carrello %>
                    <form action="/carrello/add/<%= prodotto.id %>" method="POST" style="display: inline;">
                        <%# Mantiene l'URL corrente per il reindirizzamento post-aggiunta %>
                        <input type="hidden" name="redirectUrl" value="<%= originalUrl %>">
                        <button type="submit" class="btn btn-sm btn-primary" title="Aggiungi al carrello">
                            <i class="bi bi-cart-plus-fill fs-5"></i>
                        </button>
                    </form>
                  </div>
                </div>
                <div class="card-footer bg-transparent border-top-0 text-center">
                  <small class="text-success fw-bold"><%= prodotto.condizione %></small>
                </div>
              </div>
            </div>
          <% }) %>
        </div>
      <%# Se non sono stati trovati prodotti, mostra un messaggio. %>
      <% } else { %>
        <p class="text-center text-muted">Nessun prodotto trovato per questa ricerca.</p>
      <% } %>
    </section>

    <%# Sezione per i risultati degli utenti %>
    <section id="user-results">
      <h3 class="border-bottom pb-2 mb-3">Utenti (<%= utenti.length %>)</h3>
      <%# Se sono stati trovati utenti, li visualizza in una lista. %>
      <% if (utenti && utenti.length > 0) { %>
        <div class="list-group">
          <% utenti.forEach(utente => { %>
            <%# Ogni elemento della lista è un link al profilo pubblico dell'utente. %>
            <a href="/member/<%= utente.id %>" class="list-group-item list-group-item-action d-flex align-items-center">
              <img src="<%= utente.immagine_profilo || '/immagini/avatardefault_92824.png' %>" alt="Avatar di <%= utente.username %>" class="rounded-circle me-3" style="width: 40px; height: 40px; object-fit: cover;">
              <span class="fw-bold"><%= utente.username %></span>
            </a>
          <% }) %>
        </div>
      <%# Se non sono stati trovati utenti, mostra un messaggio. %>
      <% } else { %>
        <p class="text-center text-muted">Nessun utente trovato per questa ricerca.</p>
      <% } %>
    </section>

  </main>
  
  <%# OFFCANVAS PER I FILTRI (Aggiunto) %>
  <%# Pannello laterale a scomparsa per filtrare i prodotti. %>
  <div class="offcanvas offcanvas-end" tabindex="-1" id="offcanvasFilters" aria-labelledby="offcanvasFiltersLabel">
    <div class="offcanvas-header">
      <h5 id="offcanvasFiltersLabel">Filtra Risultati Prodotti</h5>
      <button type="button" class="btn-close text-reset" data-bs-dismiss="offcanvas" aria-label="Close"></button>
    </div>
    <div class="offcanvas-body">
      <%# Il form ora invia alla rotta /search %>
      <form action="/search" method="GET">
        
        <%# CAMPO NASCOSTO per mantenere il termine di ricerca 'q' %>
        <%# Questo è fondamentale per non perdere la ricerca testuale quando si applicano i filtri %>
        <input type="hidden" name="q" value="<%= query %>">

        <%# Filtro per l'ordinamento %>
        <div class="mb-3">
          <label for="sortBy" class="form-label">Ordina per</label>
          <select class="form-select" name="sortBy" id="sortBy">
            <option value="">Più recenti (default)</option>
            <%# Mantiene selezionata l'opzione di ordinamento corrente %>
            <option value="price_asc" <%= (locals.currentFilters && currentFilters.sortBy === 'price_asc') ? 'selected' : '' %>>Prezzo: crescente</option>
            <option value="price_desc" <%= (locals.currentFilters && currentFilters.sortBy === 'price_desc') ? 'selected' : '' %>>Prezzo: decrescente</option>
          </select>
        </div>
        
        <%# Filtro per la categoria %>
        <div class="mb-3">
          <label for="category" class="form-label">Categoria</label>
          <select class="form-select" name="category" id="category">
            <option value="">Tutte le categorie</option>
            <%# Popola dinamicamente le opzioni usando l'array `categorie` %>
            <% if (locals.categorie) { %>
              <% categorie.forEach(cat => { %>
                <option value="<%= cat %>" <%= (locals.currentFilters && currentFilters.category === cat) ? 'selected' : '' %>><%= cat %></option>
              <% }) %>
            <% } %>
          </select>
        </div>
        
        <%# Filtro per la condizione %>
        <div class="mb-3">
          <label for="condition" class="form-label">Condizione</label>
          <select class="form-select" name="condition" id="condition">
            <option value="">Tutte le condizioni</option>
            <% if (locals.condizioni) { %>
              <% condizioni.forEach(cond => { %>
                <option value="<%= cond %>" <%= (locals.currentFilters && currentFilters.condition === cond) ? 'selected' : '' %>><%= cond %></option>
              <% }) %>
            <% } %>
          </select>
        </div>
        
        <div class="d-grid gap-2">
            <button type="submit" class="btn btn-primary">Applica Filtri</button>
            <%# Questo link ora rimuove solo i filtri, ma mantiene la query di ricerca 'q' %>
            <a href="/search?q=<%= query %>" class="btn btn-outline-secondary">Rimuovi Filtri</a>
        </div>
      </form>
    </div>
  </div>

  <%- include('../partials/footer') %>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>