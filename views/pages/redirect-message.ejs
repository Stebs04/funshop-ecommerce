<!doctype html>
<html lang="it">
<%- include('../partials/header') %>
<body>
    <%- include('../partials/navbar', { user: user, isAuthenticated: isAuthenticated }) %>

    <main class="container my-5 text-center">
        <h1><%= title %></h1>
        <p><%= message %></p>
        <div class="spinner-border" role="status">
            <span class="visually-hidden">Loading...</span>
        </div>
        <p class="mt-3">Sarai reindirizzato a breve...</p>
    </main>

    <%- include('../partials/footer') %>

    <script>
        // Mostra il pop-up con il messaggio
        alert('<%= message %>');
        // Reindirizza alla pagina specificata dopo che l'utente ha chiuso il pop-up
        window.location.href = '<%= redirectUrl %>';
    </script>
</body>
</html>
