<!doctype html>
<html lang="it">
<%- include('../partials/header') %>
<body class="d-flex flex-column min-vh-100">
<%- include('../partials/navbar') %>
    
<main class="container my-5">
    <div class="text-center">
        <h2 class="mb-4">Checkout</h2>
        <% if (isAuthenticated) { %>
            <p class="lead">Stai acquistando come <strong><%= user.username %></strong>. Non sei tu? <a href="/auth/logout">Esci</a></p>
        <% } else { %>
            <p class="lead">Hai già un account? <a href="/auth/login">Accedi</a> per un checkout più veloce.</p>
        <% } %>
    </div>

    <div class="row g-5">
        <div class="col-md-5 col-lg-4 order-md-last">
            <h4 class="d-flex justify-content-between align-items-center mb-3">
                <span class="text-primary">Il tuo carrello</span>
                <span class="badge bg-primary rounded-pill"><%= cart.totalQty %></span>
            </h4>
            <ul class="list-group mb-3">
                <% for(let id in cart.items) { const product = cart.items[id]; %>
                <li class="list-group-item d-flex justify-content-between lh-sm">
                    <div>
                        <h6 class="my-0"><%= product.item.nome %></h6>
                        <small class="text-muted">Quantità: <%= product.qty %></small>
                    </div>
                    <span class="text-muted">€<%= product.price.toFixed(2) %></span>
                </li>
                <% } %>
                <li class="list-group-item d-flex justify-content-between">
                    <span>Totale (EUR)</span>
                    <strong>€<%= cart.totalPrice.toFixed(2) %></strong>
                </li>
            </ul>
        </div>

        <div class="col-md-7 col-lg-8">
            <form class="needs-validation" novalidate>
                <h4 class="mb-3">Indirizzo di spedizione</h4>
                <% if (isAuthenticated) { %>
                    <% if (indirizzi && indirizzi.length > 0) { %>
                        <% indirizzi.forEach((indirizzo, index) => { %>
                            <div class="form-check">
                                <input type="radio" name="addressSelection" class="form-check-input" id="savedAddress<%= index %>" <%= index === 0 ? 'checked' : '' %>>
                                <label class="form-check-label" for="savedAddress<%= index %>">
                                    <strong class="d-block"><%= user.nome %> <%= user.cognome %></strong>
                                    <%= indirizzo.indirizzo %><br>
                                    <%= indirizzo.cap %> <%= indirizzo.citta %>
                                </label>
                            </div>
                        <% }) %>
                    <% } %>
                    <div class="form-check mt-2">
                        <input type="radio" name="addressSelection" class="form-check-input" id="newAddress" <%= (!indirizzi || indirizzi.length === 0) ? 'checked' : '' %>>
                        <label class="form-check-label" for="newAddress">
                            Aggiungi un nuovo indirizzo
                        </label>
                    </div>
                <% } %>

                <div class="row g-3 mt-2" id="new-address-form" style="<%= (isAuthenticated && indirizzi && indirizzi.length > 0) ? 'display: none;' : '' %>">
                    <% if (!isAuthenticated) { %>
                         <div class="col-sm-6"><label for="firstName" class="form-label">Nome</label><input type="text" class="form-control" id="firstName" required></div>
                         <div class="col-sm-6"><label for="lastName" class="form-label">Cognome</label><input type="text" class="form-control" id="lastName" required></div>
                         <div class="col-12"><label for="email" class="form-label">Email</label><input type="email" class="form-control" id="email" placeholder="tu@esempio.com" required></div>
                    <% } %>
                    <div class="col-12"><label for="address" class="form-label">Indirizzo</label><input type="text" class="form-control" id="address" placeholder="Via, numero civico" required></div>
                    <div class="col-md-5"><label for="country" class="form-label">Paese</label><select class="form-select" id="country" required><option value="Italia">Italia</option></select></div>
                    <div class="col-md-4"><label for="state" class="form-label">Provincia</label><input type="text" class="form-control" id="state" placeholder="es. RM" required></div>
                    <div class="col-md-3"><label for="zip" class="form-label">CAP</label><input type="text" class="form-control" id="zip" required></div>
                </div>

                <hr class="my-4">
                <h4 class="mb-3">Pagamento</h4>

                <% if (isAuthenticated) { %>
                    <% if (metodiPagamento && metodiPagamento.length > 0) { %>
                        <% metodiPagamento.forEach((metodo, index) => { %>
                            <div class="form-check">
                                <input id="saved-card<%= index %>" name="paymentMethod" type="radio" class="form-check-input" <%= index === 0 ? 'checked' : '' %>>
                                <label class="form-check-label" for="saved-card<%= index %>">Usa carta che termina in <%= metodo.last4 %></label>
                            </div>
                        <% }) %>
                    <% } %>
                    <div class="form-check">
                        <input id="new-card" name="paymentMethod" type="radio" class="form-check-input" <%= (!metodiPagamento || metodiPagamento.length === 0) ? 'checked' : '' %>>
                        <label class="form-check-label" for="new-card">Usa una nuova carta</label>
                    </div>
                <% } %>
                
                <div class="row gy-3 mt-2" id="new-card-form" style="<%= (isAuthenticated && metodiPagamento && metodiPagamento.length > 0) ? 'display: none;' : '' %>">
                    <div class="col-md-6"><label for="cc-name" class="form-label">Nome sulla carta</label><input type="text" class="form-control" id="cc-name" required></div>
                    <div class="col-md-6"><label for="cc-number" class="form-label">Numero carta</label><input type="text" class="form-control" id="cc-number" required></div>
                    <div class="col-md-3"><label for="cc-expiration" class="form-label">Scadenza</label><input type="text" class="form-control" id="cc-expiration" placeholder="MM/YY" required></div>
                    <div class="col-md-3"><label for="cc-cvv" class="form-label">CVV</label><input type="text" class="form-control" id="cc-cvv" required></div>
                </div>

                <hr class="my-4">
                <button class="w-100 btn btn-primary btn-lg" type="submit">Paga e completa l'ordine</button>
            </form>
        </div>
    </div>
</main>
<%- include('../partials/footer') %>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
<script>
    // Script per mostrare/nascondere i form di aggiunta
    document.addEventListener('DOMContentLoaded', function () {
        const newAddressForm = document.getElementById('new-address-form');
        const newCardForm = document.getElementById('new-card-form');

        document.querySelectorAll('input[name="addressSelection"]').forEach(radio => {
            radio.addEventListener('change', function() {
                if (document.getElementById('newAddress').checked) {
                    newAddressForm.style.display = 'flex';
                } else {
                    newAddressForm.style.display = 'none';
                }
            });
        });

        document.querySelectorAll('input[name="paymentMethod"]').forEach(radio => {
            radio.addEventListener('change', function() {
                if (document.getElementById('new-card').checked) {
                    newCardForm.style.display = 'flex';
                } else {
                    newCardForm.style.display = 'none';
                }
            });
        });
    });
</script>
</body>
</html>