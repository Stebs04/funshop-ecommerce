<!doctype html>
<html lang="it">
<%- include('../partials/header') %>

<body class="d-flex flex-column min-vh-100">

    <%- include('../partials/navbar') %>
    
    <main class="container my-5">
        <div class="text-center">
            <h2 class="mb-4">Checkout</h2>
            <p class="lead">Stai acquistando come <strong>Mario Rossi</strong>. Non sei tu? <a href="#">Esci</a></p>
        </div>

        <div class="row g-5">
            <!-- Order Summary -->
            <div class="col-md-5 col-lg-4 order-md-last">
                <h4 class="d-flex justify-content-between align-items-center mb-3">
                    <span class="text-primary">Riepilogo ordine</span>
                    <span class="badge bg-primary rounded-pill">3</span>
                </h4>
                <ul class="list-group mb-3">
                    <li class="list-group-item d-flex justify-content-between lh-sm">
                        <div>
                            <h6 class="my-0">Action Figure Son Goku</h6>
                            <small class="text-muted">Quantità: 1</small>
                        </div>
                        <span class="text-muted">€49,99</span>
                    </li>
                    <li class="list-group-item d-flex justify-content-between lh-sm">
                        <div>
                            <h6 class="my-0">Manga One Piece Vol. 1</h6>
                            <small class="text-muted">Quantità: 2</small>
                        </div>
                        <span class="text-muted">€9,00</span>
                    </li>
                    <li class="list-group-item d-flex justify-content-between bg-light">
                        <div class="text-success">
                            <h6 class="my-0">Codice promozionale</h6>
                            <small>EXAMPLECODE</small>
                        </div>
                        <span class="text-success">−€5,00</span>
                    </li>
                    <li class="list-group-item d-flex justify-content-between">
                        <span>Totale (EUR)</span>
                        <strong>€53,99</strong>
                    </li>
                </ul>

                <form class="card p-2">
                    <div class="input-group">
                        <input type="text" class="form-control" placeholder="Codice promozionale">
                        <button type="submit" class="btn btn-secondary">Applica</button>
                    </div>
                </form>
            </div>

            <!-- Shipping and Payment -->
            <div class="col-md-7 col-lg-8">
                <form class="needs-validation" novalidate>
                    <h4 class="mb-3">Indirizzo di spedizione</h4>
                    <div class="card mb-4">
                        <div class="card-body">
                            <div class="form-check">
                                <input type="radio" name="address" class="form-check-input" id="savedAddress" checked>
                                <label class="form-check-label" for="savedAddress">
                                    <strong class="d-block">Mario Rossi</strong>
                                    Via Roma, 123<br>
                                    00184 Roma (RM), Italia
                                </label>
                            </div>
                            <a href="#" class="btn btn-sm btn-outline-primary mt-2">Modifica indirizzo</a>
                        </div>
                    </div>

                    <hr class="my-4">

                    <h4 class="mb-3">Metodo di pagamento</h4>

                    <div class="my-3">
                        <div class="form-check">
                            <input id="saved-card" name="paymentMethod" type="radio" class="form-check-input" checked required>
                            <label class="form-check-label" for="saved-card">Usa carta salvata: Visa che termina in 1234</label>
                        </div>
                        <div class="form-check">
                            <input id="new-card" name="paymentMethod" type="radio" class="form-check-input" required>
                            <label class="form-check-label" for="new-card">Usa una nuova carta di credito</label>
                        </div>
                        <div class="form-check">
                            <input id="paypal" name="paymentMethod" type="radio" class="form-check-input" required>
                            <label class="form-check-label" for="paypal">PayPal</label>
                        </div>
                    </div>

                    <!-- New Card Form (hidden by default) -->
                    <div class="row gy-3 d-none" id="new-card-form">
                        <div class="col-md-6">
                            <label for="cc-name" class="form-label">Nome sulla carta</label>
                            <input type="text" class="form-control" id="cc-name" placeholder="">
                            <small class="text-muted">Nome completo come mostrato sulla carta</small>
                        </div>

                        <div class="col-md-6">
                            <label for="cc-number" class="form-label">Numero carta</label>
                            <input type="text" class="form-control" id="cc-number" placeholder="">
                        </div>

                        <div class="col-md-3">
                            <label for="cc-expiration" class="form-label">Scadenza</label>
                            <input type="text" class="form-control" id="cc-expiration" placeholder="MM/AA">
                        </div>

                        <div class="col-md-3">
                            <label for="cc-cvv" class="form-label">CVV</label>
                            <input type="text" class="form-control" id="cc-cvv" placeholder="">
                        </div>
                    </div>

                    <hr class="my-4">

                    <button class="w-100 btn btn-primary btn-lg" type="submit">Paga e completa l'ordine</button>
                </form>
            </div>
        </div>
    </main>

    <%- include('../partials/footer') %>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <script>
        // Example starter JavaScript for disabling form submissions if there are invalid fields
        (() => {
          'use strict'
        
          // Fetch all the forms we want to apply custom Bootstrap validation styles to
          const forms = document.querySelectorAll('.needs-validation')
        
          // Loop over them and prevent submission
          Array.from(forms).forEach(form => {
            form.addEventListener('submit', event => {
              if (!form.checkValidity()) {
                event.preventDefault()
                event.stopPropagation()
              }
        
              form.classList.add('was-validated')
            }, false)
          })

          // Logic to show/hide new card form
          const paymentRadios = document.querySelectorAll('input[name="paymentMethod"]');
          const newCardForm = document.getElementById('new-card-form');
          const newCardFormInputs = newCardForm.querySelectorAll('input');

          paymentRadios.forEach(radio => {
            radio.addEventListener('change', () => {
                if (document.getElementById('new-card').checked) {
                    newCardForm.classList.remove('d-none');
                    newCardFormInputs.forEach(input => input.required = true);
                } else {
                    newCardForm.classList.add('d-none');
                    newCardFormInputs.forEach(input => input.required = false);
                }
            });
          });
        })()
    </script>
</body>
</html>