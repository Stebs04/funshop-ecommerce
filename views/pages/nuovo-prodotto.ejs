<!doctype html>
<html lang="it">
<%- include('../partials/header') %>

<body class="d-flex flex-column min-vh-100">

    <%- include('../partials/navbar') %>

    
    <main class="container my-5">
        <div class="row justify-content-center">
            <div class="col-lg-8">
            <div class="card shadow-sm">
                <div class="card-body p-4 p-md-5">
                <h2 class="text-center mb-4">Aggiungi un nuovo prodotto</h2>
                <form id="new-product-form" action="/products" method="POST" enctype="multipart/form-data">
                    <!-- Titolo Prodotto -->
                    <div class="mb-3">
                    <label for="productTitle" class="form-label">Titolo del prodotto</label>
                    <input name="nome" type="text" class="form-control" id="productTitle" placeholder="Es. Action Figure Son Goku SSJ" required>
                    </div>

                    <!-- Descrizione -->
                    <div class="mb-3">
                    <label for="productDescription" class="form-label">Descrizione</label>
                    <textarea name="descrizione" class="form-control" id="productDescription" rows="5" placeholder="Descrivi il tuo prodotto in dettaglio, incluse le condizioni, la serie, ecc." required></textarea>
                    </div>

                    <!-- Categoria -->
                    <div class="mb-3">
                        <label for="productCategory" class="form-label">Categoria</label>
                        <input name="categoria" type="text" class="form-control" id="productCategory" placeholder="Es. Action Figure" required>
                    </div>

                    <!-- Condizione -->
                    <div class="mb-3">
                        <label for="productCondition" class="form-label">Condizione</label>
                        <select name="condizione" class="form-select" id="productCondition" required>
                            <option value="" disabled selected>Seleziona una condizione</option>
                            <option value="Come nuovo">Come nuovo</option>
                            <option value="Ottimo stato">Ottimo stato</option>
                            <option value="Tanto usato">Tanto usato</option>
                        </select>
                    </div>

                    <!-- Immagini -->
                    <div class="mb-4">
                    <label for="productImages" class="form-label">Immagine del prodotto</label>
                    <input name="percorso_immagine" class="form-control" type="file" id="productImages" accept="image/*" required>
                    </div>

                    <!-- Modalità di vendita -->
                    <div class="mb-3">
                        <label for="sellingType" class="form-label">Modalità di vendita</label>
                        <select class="form-select" id="sellingType" name="sellingType">
                            <option value="sell_now" selected>Vendi ora</option>
                            <option value="auction">Metti all'asta</option>
                        </select>
                    </div>

                    <!-- Prezzo per "Vendi ora" -->
                    <div id="price-section" class="mb-3">
                        <label for="productPrice" class="form-label">Prezzo</label>
                        <div class="input-group">
                            <span class="input-group-text">€</span>
                            <input name="prezzo" type="number" class="form-control" id="productPrice" placeholder="29.99" step="0.01" min="0" required>
                        </div>
                    </div>

                    <!-- Prezzo per "Metti all'asta" -->
                    <div id="auction-price-section" class="mb-3 d-none">
                        <label for="auctionStartPrice" class="form-label">Prezzo di partenza asta</label>
                        <div class="input-group">
                            <span class="input-group-text">€</span>
                            <input name="prezzo_asta" type="number" class="form-control" id="auctionStartPrice" placeholder="9.99" step="0.01" min="0">
                        </div>
                    </div>

                    <!-- Pulsanti -->
                    <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-4">
                    <button type="button" class="btn btn-outline-secondary" onclick="window.history.back()">Annulla</button>
                    <button type="submit" class="btn btn-primary">Metti in vendita</button>
                    </div>
                </form>
                </div>
            </div>
            </div>
        </div>
    </main>

    <%- include('../partials/footer') %>

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const sellingType = document.getElementById('sellingType');
            const priceSection = document.getElementById('price-section');
            const auctionPriceSection = document.getElementById('auction-price-section');
            const productPriceInput = document.getElementById('productPrice');
            const auctionStartPriceInput = document.getElementById('auctionStartPrice');

            sellingType.addEventListener('change', function () {
                if (this.value === 'auction') {
                    priceSection.classList.add('d-none');
                    productPriceInput.required = false;
                    productPriceInput.value = ''; // Svuota il campo
                    auctionPriceSection.classList.remove('d-none');
                    auctionStartPriceInput.required = true;
                } else { // 'sell_now'
                    priceSection.classList.remove('d-none');
                    productPriceInput.required = true;
                    auctionPriceSection.classList.add('d-none');
                    auctionStartPriceInput.required = false;
                    auctionStartPriceInput.value = ''; // Svuota il campo
                }
            });
        });
    </script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>
