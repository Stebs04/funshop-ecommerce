<%# stebs04/funshop-ecommerce/funshop-ecommerce/views/pages/member.ejs %>
<!doctype html>
<html lang="it">
<%- include('../partials/header') %>
<body class="d-flex flex-column min-vh-100">
<%- include('../partials/navbar') %>

<main class="container my-5">
    <%- include('../partials/messages') %>
    
    <div class="member-profile-header mb-4">
        <div class="d-flex align-items-center justify-content-between">
            <div class="d-flex align-items-center">
                <img src="<%= accountInfo.immagine_profilo || '/immagini/avatardefault_92824.png' %>" alt="Immagine Profilo" class="rounded-circle me-4" style="width: 100px; height: 100px; object-fit: cover;">
                <div>
                    <h3 class="mb-0"><%= member.username %></h3>
                    <div class="text-muted d-flex align-items-center">
                        <% const fullStars = Math.floor(averageRating); %>
                        <% const halfStar = averageRating % 1 !== 0; %>
                        <% const emptyStars = 5 - fullStars - (halfStar ? 1 : 0); %>

                        <% for(let i = 0; i < fullStars; i++) { %>
                            <i class="bi bi-star-fill text-warning"></i>
                        <% } %>
                        <% if (halfStar) { %>
                            <i class="bi bi-star-half text-warning"></i>
                        <% } %>
                        <% for(let i = 0; i < emptyStars; i++) { %>
                            <i class="bi bi-star text-warning"></i>
                        <% } %>
                        <span class="ms-2">(<%= reviewCount %> recensioni)</span>
                    </div>
                </div>
            </div>
            
            <% if (locals.isOwner && isOwner) { %>
                <a href="/utente?section=dati" class="btn btn-secondary">
                    <i class="bi bi-pencil-square me-2"></i>Modifica Profilo
                </a>
            <% } %>
        </div>
        <div class="mt-3">
            <p><%= accountInfo.descrizione || 'Nessuna descrizione fornita.' %></p>
        </div>
    </div>

    <ul class="nav nav-tabs" id="memberTab" role="tablist">
        <li class="nav-item" role="presentation">
            <button class="nav-link active" id="articoli-tab" data-bs-toggle="tab" data-bs-target="#articoli-tab-pane" type="button" role="tab" aria-controls="articoli-tab-pane" aria-selected="true">Articoli attualmente attivi (<%= prodotti.length %>)</button>
        </li>
        <li class="nav-item" role="presentation">
            <button class="nav-link" id="recensioni-tab" data-bs-toggle="tab" data-bs-target="#recensioni-tab-pane" type="button" role="tab" aria-controls="recensioni-tab-pane" aria-selected="false">Recensioni (<%= recensioni.length %>)</button>
        </li>
    </ul>

    <div class="tab-content" id="memberTabContent">
        <div class="tab-pane fade show active" id="articoli-tab-pane" role="tabpanel" aria-labelledby="articoli-tab" tabindex="0">
            <div class="pt-4">
                <% if (prodotti.length > 0) { %>
                    <div class="row row-cols-2 row-cols-md-3 row-cols-lg-5 g-4">
                        <% prodotti.forEach(prodotto => { %>
                            <div class="col">
                                <div class="card h-100 product-card">
                                    <a href="/products/<%= prodotto.id %>">
                                        <img src="<%= prodotto.percorso_immagine || 'https://via.placeholder.com/150' %>" class="card-img-top" alt="<%= prodotto.nome %>" style="height: 200px; object-fit: cover;">
                                    </a>
                                    <div class="card-body p-3 d-flex flex-column">
                                        <h6 class="card-title fw-bold"><%= prodotto.nome %></h6>
                                        <p class="card-text small mt-auto">â‚¬ <%= (prodotto.prezzo || 0).toFixed(2) %></p>
                                    </div>
                                    <div class="card-footer bg-transparent border-top-0">
                                        <small class="text-muted"><%= prodotto.condizione %></small>
                                    </div>
                                </div>
                            </div>
                        <% }) %>
                    </div>
                <% } else { %>
                    <div class="text-center py-5">
                        <p>Questo utente non ha nessun articolo in vendita al momento.</p>
                    </div>
                <% } %>
            </div>
        </div>
      
        <div class="tab-pane fade" id="recensioni-tab-pane" role="tabpanel" aria-labelledby="recensioni-tab" tabindex="0">
            <div class="pt-4">
                <% if (recensioni && recensioni.length > 0) { %>
                    <% recensioni.forEach(recensione => { %>
                        <div class="card mb-3">
                            <div class="card-body">
                                <div class="d-flex justify-content-between">
                                    <div>
                                        <h6 class="card-subtitle mb-2 text-muted">
                                            Recensione per: <a href="/products/<%= recensione.prodotto_id %>"><%= recensione.nome_prodotto %></a>
                                        </h6>
                                        <h6 class="card-subtitle mb-2 text-muted">
                                            Da: <%= recensione.autore_recensione %>
                                        </h6>
                                    </div>
                                    <div>
                                        <% for(let i = 0; i < recensione.valutazione; i++) { %>
                                            <i class="bi bi-star-fill text-warning"></i>
                                        <% } %>
                                        <% for(let i = recensione.valutazione; i < 5; i++) { %>
                                            <i class="bi bi-star text-warning"></i>
                                        <% } %>
                                    </div>
                                </div>
                                <p class="card-text mt-2"><%= recensione.contenuto %></p>
                                <small class="text-muted"><%= new Date(recensione.data_creazione).toLocaleDateString('it-IT') %></small>
                            </div>
                        </div>
                    <% }) %>
                <% } else { %>
                    <div class="text-center py-5">
                        <p>Questo utente non ha ancora ricevuto nessuna recensione.</p>
                    </div>
                <% } %>
            </div>
        </div>
    </div>
</main>

<%- include('../partials/footer') %>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>