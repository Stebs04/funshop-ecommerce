<!doctype html>
<html lang="it">
<%- include('../partials/header') %>
<body class="d-flex flex-column min-vh-100">
<%- include('../partials/navbar') %>

<main class="container my-5">
    <div class="member-profile-header mb-4">
        <div class="d-flex align-items-center justify-content-between">
            <div class="d-flex align-items-center">
                <img src="<%= accountInfo.immagine_profilo ? '/uploads/' + accountInfo.immagine_profilo : '/immagini/avatardefault_92824.png' %>" alt="Immagine Profilo" class="rounded-circle me-4" style="width: 100px; height: 100px; object-fit: cover;">
                <div>
                    <h3 class="mb-0"><%= member.username %></h3>
                    <div class="text-muted">
                        <i class="bi bi-star-fill text-warning"></i>
                        <i class="bi bi-star-fill text-warning"></i>
                        <i class="bi bi-star-fill text-warning"></i>
                        <i class="bi bi-star-fill text-warning"></i>
                        <i class="bi bi-star-half text-warning"></i>
                        <span><%= accountInfo.recensioni || 0 %> recensioni</span>
                    </div>
                </div>
            </div>
            <button class="btn btn-primary">Segui</button>
        </div>
        <div class="mt-3">
            <p><%= accountInfo.descrizione_profilo || 'Nessuna descrizione fornita.' %> <a href="#">Ulteriori informazioni</a></p>
        </div>
        <div class="row mt-3">
            <div class="col-md-6">
                <h5>Informazioni</h5>
                <ul class="list-unstyled">
                    <li><i class="bi bi-geo-alt-fill me-2"></i><%= accountInfo.localita || 'Non specificato' %></li>
                    <li><i class="bi bi-clock-fill me-2"></i>Ultima visita <%= new Date(member.data_ultimo_accesso).toLocaleString('it-IT') %></li>
                    <li><i class="bi bi-people-fill me-2"></i><%= accountInfo.followers || 0 %> follower, <%= accountInfo.seguiti || 0 %> seguiti</li>
                </ul>
            </div>
            <div class="col-md-6">
                <h5>Informazioni verificate</h5>
                <ul class="list-unstyled">
                    <% if (accountInfo.verificato_google) { %>
                        <li><i class="bi bi-check-circle-fill text-success me-2"></i>Google</li>
                    <% } %>
                    <% if (accountInfo.verificato_email) { %>
                        <li><i class="bi bi-check-circle-fill text-success me-2"></i>E-mail</li>
                    <% } %>
                </ul>
            </div>
        </div>
         <div class="d-flex gap-3 mt-3">
            <% if (accountInfo.annunci_frequenti) { %>
            <div class="p-2 border rounded d-flex align-items-center">
                <i class="bi bi-box-seam-fill me-2"></i>
                <div>
                    <strong>Annunci frequenti</strong><br>
                    <small>Carica con regolarità almeno 5 articoli.</small>
                </div>
            </div>
            <% } %>
            <% if (accountInfo.spedizione_rapida) { %>
            <div class="p-2 border rounded d-flex align-items-center">
                <i class="bi bi-truck me-2"></i>
                <div>
                    <strong>Spedizione rapida</strong><br>
                    <small>Spedisce rapidamente, di solito entro 24 ore.</small>
                </div>
            </div>
            <% } %>
        </div>
    </div>

    <ul class="nav nav-tabs" id="memberTab" role="tablist">
        <li class="nav-item" role="presentation">
            <button class="nav-link active" id="annunci-tab" data-bs-toggle="tab" data-bs-target="#annunci" type="button" role="tab" aria-controls="annunci" aria-selected="true">Annunci (<%= prodotti.length %>)</button>
        </li>
        <li class="nav-item" role="presentation">
            <button class="nav-link" id="recensioni-tab" data-bs-toggle="tab" data-bs-target="#recensioni" type="button" role="tab" aria-controls="recensioni" aria-selected="false">Recensioni</button>
        </li>
    </ul>

    <div class="tab-content" id="memberTabContent">
        <div class="tab-pane fade show active" id="annunci" role="tabpanel" aria-labelledby="annunci-tab">
            <div class="p-3 bg-light border-bottom mb-3 d-flex justify-content-between align-items-center">
                <div>
                    <h5>Acquista set</h5>
                    <p class="mb-0">Ottieni fino al 25% di sconto</p>
                </div>
                <button class="btn btn-success">Crea set</button>
            </div>
            <div class="row row-cols-2 row-cols-md-3 row-cols-lg-5 g-3">
                <% if (prodotti.length > 0) { %>
                    <% prodotti.forEach(prodotto => { %>
                        <div class="col">
                            <div class="card h-100">
                                <a href="/prodotto/<%= prodotto.id %>">
                                    <img src="<%= prodotto.percorso_immagine ? '/uploads/' + prodotto.percorso_immagine : 'https://via.placeholder.com/150' %>" class="card-img-top" alt="<%= prodotto.nome %>">
                                </a>
                                <div class="card-body p-2">
                                    <p class="card-text small">€ <%= prodotto.prezzo.toFixed(2) %></p>
                                    <p class="card-text small text-muted">Taglia <%= prodotto.condizione %></p>
                                </div>
                            </div>
                        </div>
                    <% }) %>
                <% } else { %>
                    <p>Questo utente non ha ancora messo in vendita nessun articolo.</p>
                <% } %>
            </div>
        </div>
        <div class="tab-pane fade" id="recensioni" role="tabpanel" aria-labelledby="recensioni-tab">
            <div class="p-3">
                <p>Nessuna recensione disponibile.</p>
            </div>
        </div>
    </div>
</main>

<%- include('../partials/footer') %>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>
