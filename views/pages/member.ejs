<%- /* stebs04/funshop-ecommerce/funshop-ecommerce-3f0b7301d71038e99f9c8f010347363920677908/views/pages/member.ejs */ %>
<!doctype html>
<html lang="it">
<%- include('../partials/header') %>
<body class="d-flex flex-column min-vh-100">
<%- include('../partials/navbar') %>

<main class="container my-5">
    <div class="member-profile-header mb-4">
    <div class="d-flex align-items-center justify-content-between">
        <div class="d-flex align-items-center">
            <img src="<%= accountInfo.immagine_profilo || '/immagini/avatardefault_92824.png' %>" alt="Immagine Profilo" class="rounded-circle me-4" style="width: 100px; height: 100px; object-fit: cover;">
            <div>
                <h3 class="mb-0"><%= member.username %></h3>
                <div class="text-muted d-flex align-items-center">
                    <% const fullStars = Math.floor(averageRating); %>
                    <% const halfStar = averageRating % 1 !== 0; %>
                    <% const emptyStars = 5 - fullStars - (halfStar ? 1 : 0); %>

                    <% for(let i = 0; i < fullStars; i++) { %>
                        <i class="bi bi-star-fill text-warning"></i>
                    <% } %>
                    <% if (halfStar) { %>
                        <i class="bi bi-star-half text-warning"></i>
                    <% } %>
                    <% for(let i = 0; i < emptyStars; i++) { %>
                        <i class="bi bi-star text-warning"></i>
                    <% } %>
                    <span class="ms-2">(<%= reviewCount %> recensioni)</span>
                </div>
            </div>
        </div>
        <button class="btn btn-primary">Segui</button>
    </div>
    <div class="mt-3">
        <p><%= accountInfo.descrizione || 'Nessuna descrizione fornita.' %></p>
    </div>
</div>
    </div>

    <ul class="nav nav-tabs" id="memberTab" role="tablist">
        <li class="nav-item" role="presentation">
            <button class="nav-link active" id="articoli-tab" data-bs-toggle="tab" data-bs-target="#articoli" type="button" role="tab" aria-controls="articoli" aria-selected="true">Articoli 
 (<%= prodotti.length %>)</button>
        </li>
        <li class="nav-item" role="presentation">
            <button class="nav-link" id="recensioni-tab" data-bs-toggle="tab" data-bs-target="#recensioni" type="button" role="tab" aria-controls="recensioni" aria-selected="false">Recensioni</button>
        </li>
    </ul>

    <div class="tab-content" id="memberTabContent">
        <div class="tab-pane fade show active" id="articoli" role="tabpanel" aria-labelledby="articoli-tab">
            <div class="row row-cols-2 row-cols-md-3 row-cols-lg-5 g-3 pt-3">
         
                 <% if (prodotti.length > 0) { %>
                    <% prodotti.forEach(prodotto => { %>
                        <div class="col">
                            <div class="card h-100">
        
                                <%# CORREZIONE: Il link ora punta a /products/ che è la rotta corretta %>
                                <a href="/products/<%= prodotto.id %>">
                                    <img src="<%= prodotto.percorso_immagine || 'https://via.placeholder.com/150' %>" class="card-img-top" alt="<%= prodotto.nome %>">
                                </a>
                                <div class="card-body p-2">
                         
                                    <p class="card-text small">€ <%= prodotto.prezzo.toFixed(2) %></p>
                                    <p class="card-text small text-muted">Taglia <%= prodotto.condizione %></p>
                                </div>
          
                               </div>
                        </div>
                    <% }) %>
                <% } else { %>
                
                     <p>Questo utente non ha ancora messo in vendita nessun articolo.</p>
                <% } %>
            </div>
        </div>
      <div class="tab-pane fade" id="recensioni" role="tabpanel" aria-labelledby="recensioni-tab">
            <div class="p-3">
                <% if (recensioni && recensioni.length > 0) { %>
                    <% recensioni.forEach(recensione => { %>
                        <div class="card mb-3">
                            <div class="card-body">
                                <div class="d-flex justify-content-between">
                                    <div>
                                        <h6 class="card-subtitle mb-2 text-muted">
                                            Recensione per: <a href="/products/<%= recensione.prodotto_id %>"><%= recensione.nome_prodotto %></a>
                                        </h6>
                                        <h6 class="card-subtitle mb-2 text-muted">
                                            Da: <%= recensione.autore_recensione %>
                                        </h6>
                                    </div>
                                    <div>
                                        <% for(let i = 0; i < recensione.valutazione; i++) { %>
                                            <i class="bi bi-star-fill text-warning"></i>
                                        <% } %>
                                        <% for(let i = recensione.valutazione; i < 5; i++) { %>
                                            <i class="bi bi-star text-warning"></i>
                                        <% } %>
                                    </div>
                                </div>
                                <p class="card-text"><%= recensione.contenuto %></p>
                                <small class="text-muted"><%= new Date(recensione.data_creazione).toLocaleDateString('it-IT') %></small>
                            </div>
                        </div>
                    <% }) %>
                <% } else { %>
                    <p>Questo utente non ha ancora ricevuto nessuna recensione.</p>
                <% } %>
            </div>
        </div>
        </div>
    </div>
</main>

<%- include('../partials/footer') %>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>