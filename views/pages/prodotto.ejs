<!doctype html>
<html lang="it">
<%- include('../partials/header') %>
<body class="d-flex flex-column min-vh-100">

  <%- include('../partials/navbar') %>

  <main class="container my-5">
    <%- include('../partials/messages') %>

    <% if (prodotto) { %>
    <div class="row g-5">
      <div class="col-md-7">
        <img src="<%= prodotto.percorso_immagine %>" class="img-fluid rounded shadow-sm mb-3" alt="Immagine principale del prodotto">
      </div>

      <div class="col-md-5">
        <div class="card p-4 shadow-sm">
          <h1 class="display-5 fw-bold">â‚¬ <%= (prodotto.prezzo_scontato || prodotto.prezzo || prodotto.prezzo_asta).toFixed(2) %></h1>
          <h2><%= prodotto.nome %></h2>
          <hr>
          
          <ul class="list-unstyled mb-4">
            <li class="d-flex justify-content-between"><span>CONDIZIONI:</span><strong><%= prodotto.condizione %></strong></li>
            <li class="d-flex justify-content-between"><span>CATEGORIA:</span><strong><%= prodotto.parola_chiave %></strong></li>
          </ul>

          <h5 class="fw-bold">Descrizione</h5>
          <p class="text-muted"><%= prodotto.descrizione %></p>
          <hr>
          
          <div class="d-flex align-items-center mb-4">
            <img src="<%= prodotto.immagine_profilo ? prodotto.immagine_profilo : '/immagini/avatardefault_92824.png' %>" alt="Avatar venditore" width="48" height="48" class="rounded-circle me-3">
            <div>
              <h6 class="mb-0 fw-bold"><a href="/member/<%= prodotto.user_id %>" class="text-decoration-none text-dark"><%= prodotto.nome_venditore %></a></h6>
            </div>
          </div>

          <form action="/carrello/add/<%= prodotto.id %>" method="POST">
            <input type="hidden" name="redirectUrl" value="<%= originalUrl %>">
            <button type="submit" class="btn btn-primary btn-lg w-100 mb-2">
                <i class="bi bi-cart-plus-fill me-2"></i>Aggiungi al Carrello
            </button>
          </form>
          
          <% if (isAuthenticated) { %>
            <% if (isObserved) { %>
                <form action="/observed/remove/<%= prodotto.id %>" method="POST">
                    <button type="submit" class="btn btn-outline-danger w-100 mb-2">
                        <i class="bi bi-star-fill me-2"></i>Rimuovi dagli Osservati
                    </button>
                </form>
            <% } else { %>
                <form action="/observed/add/<%= prodotto.id %>" method="POST">
                    <button type="submit" class="btn btn-outline-secondary w-100 mb-2">
                        <i class="bi bi-star me-2"></i>Osserva Prodotto
                    </button>
                </form>
            <% } %>
          <% } else { %>
            <a href="/auth/registrazione" class="btn btn-outline-secondary w-100 mb-2">
                <i class="bi bi-star me-2"></i>Osserva Prodotto
            </a>
          <% } %>

          <% if (prodotto.prezzo_asta) { %>
            <a href="#" class="btn btn-outline-primary w-100 mb-2">Fai un'offerta</a>
          <% } %>

          <button type="button" class="btn btn-outline-secondary w-100" data-bs-toggle="modal" data-bs-target="#infoModal" data-product-name="<%= prodotto.nome %>" data-seller-email="<%= prodotto.email_venditore %>">
            <i class="bi bi-envelope me-2"></i>Chiedi informazioni
          </button>
        </div>
      </div>
    </div>
    <% } else { %>
      <div class="alert alert-danger" role="alert">Prodotto non trovato.</div>
    <% } %>

    <div class="row mt-5">
      <div class="col-md-12">
        <h3>Recensioni</h3>
        <hr>
        <% if (isAuthenticated) { %>
          <div class="card mb-4">
            <div class="card-body">
              <h5 class="card-title">Lascia una recensione</h5>
              <form action="/recensioni" method="POST">
                <input type="hidden" name="prodotto_id" value="<%= prodotto.id %>">
                <div class="mb-3">
                  <label for="valutazione" class="form-label">Valutazione</label>
                  <select class="form-select" id="valutazione" name="valutazione" required>
                    <option value="5">5 - Eccellente</option>
                    <option value="4">4 - Molto buono</option>
                    <option value="3">3 - Buono</option>
                    <option value="2">2 - Discreto</option>
                    <option value="1">1 - Scarso</option>
                  </select>
                </div>
                <div class="mb-3">
                  <label for="contenuto" class="form-label">La tua recensione</label>
                  <textarea class="form-control" id="contenuto" name="contenuto" rows="3" required></textarea>
                </div>
                <button type="submit" class="btn btn-primary">Invia recensione</button>
              </form>
            </div>
          </div>
        <% } %>
        <% if (recensioni && recensioni.length > 0) { %>
          <% recensioni.forEach(recensione => { %>
            <div class="card mb-3">
              <div class="card-body">
                <div class="d-flex justify-content-between">
                  <h6 class="card-subtitle mb-2 text-muted">Da: <%= recensione.username %></h6>
                  <div>
                    <% for(let i = 0; i < recensione.valutazione; i++) { %><i class="bi bi-star-fill text-warning"></i><% } %>
                    <% for(let i = recensione.valutazione; i < 5; i++) { %><i class="bi bi-star text-warning"></i><% } %>
                  </div>
                </div>
                <p class="card-text"><%= recensione.contenuto %></p>
                <small class="text-muted"><%= new Date(recensione.data_creazione).toLocaleDateString('it-IT') %></small>
              </div>
            </div>
          <% }) %>
        <% } else { %>
          <p>Non ci sono ancora recensioni per questo prodotto.</p>
        <% } %>
      </div>
    </div>
  </main>

  <div class="modal fade" id="infoModal" tabindex="-1" aria-labelledby="infoModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="infoModalLabel">Chiedi informazioni</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="infoForm">
                    <div class="mb-3">
                        <label for="infoMessage" class="form-label">Il tuo messaggio:</label>
                        <textarea class="form-control" id="infoMessage" rows="5" required placeholder="Ciao, vorrei avere maggiori informazioni su questo prodotto..."></textarea>
                    </div>
                    <button type="submit" id="sendInfoButton" class="btn btn-primary w-100">
                        <i class="bi bi-send-fill me-2"></i>Invia tramite Email
                    </button>
                </form>
            </div>
        </div>
    </div>
  </div>

  <%- include('../partials/footer') %>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>