<%# views/pages/prodotto.ejs %>
<%# Pagina di dettaglio per un singolo prodotto.
%>

<!doctype html>
<html lang="it">
<%- include('../partials/header') %>
<body class="d-flex flex-column min-vh-100">

  <%- include('../partials/navbar') %>

  <main class="container my-5">
    <%- include('../partials/messages') %>

    <%# Controlla se l'oggetto `prodotto` è stato passato correttamente dalla rotta.
%>
    <% if (prodotto) { %>
    <div class="row g-5">
      <%# Colonna sinistra con l'immagine principale del prodotto.
%>
      <div class="col-md-7">
        <%# Se il prodotto non è più disponibile, l'immagine viene mostrata con opacità ridotta.
%>
        <img src="<%= prodotto.percorso_immagine %>" class="img-fluid rounded shadow-sm mb-3 <%= prodotto.stato !== 'disponibile' ? 'opacity-50' : '' %>" alt="Immagine principale del prodotto">
      </div>

      <%# Colonna destra con i dettagli e i pulsanti di azione.
%>
      <div class="col-md-5">
        <div class="card p-4 shadow-sm">
      
          <%# Mostra il prezzo (scontato o base).
%>
          <h1 class="display-5 fw-bold">€ <%= (prodotto.prezzo_scontato || prodotto.prezzo).toFixed(2) %></h1>
          <h2><%= prodotto.nome %></h2>
          <hr>
          
          <ul class="list-unstyled mb-4">
            <li class="d-flex justify-content-between"><span>CONDIZIONI:</span><strong><%= prodotto.condizione %></strong></li>
            <li class="d-flex justify-content-between"><span>CATEGORIA:</span><strong><%= prodotto.parola_chiave %></strong></li>
     
     </ul>

          <h5 class="fw-bold">Descrizione</h5>
          <p class="text-muted"><%= prodotto.descrizione %></p>
          <hr>
          
          <%# Sezione che mostra le informazioni del venditore (avatar e username).
%>
          <div class="d-flex align-items-center mb-4">
            <img src="<%= prodotto.immagine_profilo ? prodotto.immagine_profilo : '/immagini/avatardefault_92824.png' %>" alt="Avatar venditore" width="48" height="48" class="rounded-circle me-3">
            <div>
              <h6 class="mb-0 fw-bold"><a href="/member/<%= prodotto.user_id %>" class="text-decoration-none text-dark"><%= prodotto.nome_venditore %></a></h6>
            </div>
          </div>

     
     <%# --- BLOCCO LOGICA STATO PRODOTTO --- %>
          <%# Questo blocco gestisce quali pulsanti mostrare in base allo stato del prodotto.
%>

          <%# Se il prodotto NON è disponibile, mostra un avviso.
%>
          <% if (prodotto.stato !== 'disponibile') { %>
            <div class="alert alert-warning text-center" role="alert">
                <i class="bi bi-exclamation-triangle-fill me-2"></i>
                Questo prodotto non è più disponibile.
</div>
          <% } %>

          <%# Se il prodotto È disponibile, mostra i pulsanti di azione principali.
%>
          <% if (prodotto.stato === 'disponibile') { %>
            
            <form action="/carrello/add/<%= prodotto.id %>" method="POST">
              <input type="hidden" name="redirectUrl" value="<%= originalUrl %>">
              <button type="submit" class="btn btn-primary btn-lg w-100 mb-2">
                 
 <i class="bi bi-cart-plus-fill me-2"></i>Aggiungi al Carrello
              </button>
            </form>
            
            <%# Logica per il pulsante "Osserva".
%>
            <% if (isAuthenticated) { %>
              <%# Se l'utente è loggato e sta già osservando il prodotto (`isObserved` è true), mostra il pulsante per rimuoverlo.
%>
              <% if (isObserved) { %>
                <form action="/observed/remove/<%= prodotto.id %>" method="POST">
                    <button type="submit" class="btn btn-outline-danger w-100 mb-2">
                           <i class="bi bi-star-fill me-2"></i>Rimuovi dagli Osservati
     
                 </button>
                  </form>
              <%# Altrimenti, mostra il pulsante per aggiungerlo.
%>
              <% } else { %>
                <form action="/observed/add/<%= prodotto.id %>" method="POST">
                      <button type="submit" class="btn btn-outline-secondary w-100 mb-2">
                          <i class="bi bi-star me-2"></i>Osserva Prodotto
     
                 </button>
                 </form>
              <% } %>
            <%# Se l'utente non è loggato, il pulsante "Osserva" lo reindirizza alla pagina di registrazione.
%>
            <% } else { %>
              <a href="/auth/registrazione" class="btn btn-outline-secondary w-100 mb-2">
                  <i class="bi bi-star me-2"></i>Osserva Prodotto
              </a>
            <% } %>
  
            <%# 
Pulsante che apre il modale per chiedere informazioni al venditore.
%>
            <button type="button" class="btn btn-outline-secondary w-100" data-bs-toggle="modal" data-bs-target="#infoModal" data-product-name="<%= prodotto.nome %>" data-seller-email="<%= prodotto.email_venditore %>">
                <i class="bi bi-envelope me-2"></i>Chiedi informazioni
            </button>

          <%# Se il prodotto NON è disponibile, mostra i pulsanti disabilitati.
%>
          <% } else { %>
            <button type="button" class="btn btn-primary btn-lg w-100 mb-2" disabled>
                <i class="bi bi-cart-x-fill me-2"></i>Non disponibile
            </button>
            <%# Cliccando su questi pulsanti, uno script JS mostrerà un modale di avviso.
%>
            <button type="button" class="btn btn-outline-secondary w-100 mb-2" onclick="showUnavailableModal()">
                <i class="bi bi-star me-2"></i>Osserva Prodotto
            </button>
            <button type="button" class="btn btn-outline-secondary w-100" onclick="showUnavailableModal()">
                <i class="bi bi-envelope me-2"></i>Chiedi informazioni
            </button>
 
         <% } %>
          <%# --- FINE BLOCCO LOGICA STATO PRODOTTO --- %>

        </div>
      </div>
    </div>
    <% } else { %>
      <div class="alert alert-danger" role="alert">Prodotto non trovato.</div>
    <% } %>
  </main>

  <%# MODALE PER CHIEDERE INFORMAZIONI %>
  <div class="modal fade" id="infoModal" tabindex="-1" aria-labelledby="infoModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      
   <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="infoModalLabel">Chiedi informazioni</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="infoForm">
   
                 <div class="mb-3">
                        <label for="infoMessage" class="form-label">Il tuo messaggio:</label>
                        <textarea class="form-control" id="infoMessage" rows="5" required placeholder="Ciao, vorrei avere maggiori informazioni su questo prodotto..."></textarea>
                  
   </div>
                    <button type="submit" id="sendInfoButton" class="btn btn-primary w-100">
                        <i class="bi bi-send-fill me-2"></i>Invia tramite Email
                    </button>
                </form>
        
     </div>
        </div>
    </div>
  </div>

  <%# MODALE DI AVVISO PER PRODOTTI NON DISPONIBILI %>
  <div class="modal fade" id="unavailableModal" tabindex="-1" aria-labelledby="unavailableModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="unavailableModalLabel">
            <i class="bi bi-exclamation-circle-fill text-warning me-2"></i>Prodotto Non Disponibile
          </h5>
  
         <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <p>Siamo spiacenti, questo prodotto non è più disponibile e non può essere aggiunto al carrello o osservato.</p>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-primary" data-bs-dismiss="modal">Ho capito</button>
        </div>
     
 </div>
    </div>
  </div>

  <%- include('../partials/footer') %>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  
  <script>
    // Funzione JavaScript per mostrare il modale "Non Disponibile".
function showUnavailableModal() {
        const unavailableModal = new bootstrap.Modal(document.getElementById('unavailableModal'));
        unavailableModal.show();
}

    // Script per il modale "Chiedi Informazioni".
document.addEventListener('DOMContentLoaded', function () {
        const infoModal = document.getElementById('infoModal');
        if (infoModal) {
            let sellerEmail = '';
            let productName = '';
            // Quando il modale si apre, recupera l'email del venditore e il nome del prodotto dai data-attributes del pulsante.
            infoModal.addEventListener('show.bs.modal', function (event) {
 
              const button = event.relatedTarget;
                sellerEmail = button.getAttribute('data-seller-email');
                productName = button.getAttribute('data-product-name');
            });
            // Quando il form viene inviato...
            const infoForm = document.getElementById('infoForm');
   
         infoForm.addEventListener('submit', function(event) {
               event.preventDefault(); // ...previene il ricaricamento della pagina.
                const message = document.getElementById('infoMessage').value;
                const subject = `Richiesta informazioni per il prodotto: ${productName}`;
const body = `${message}\n\n---\nMessaggio inviato tramite FunShop per il prodotto: ${window.location.href}`;
// ...costruisce un link `mailto:` e lo apre, aprendo il client di posta predefinito dell'utente.
                const mailtoLink = `mailto:${sellerEmail}?subject=${encodeURIComponent(subject)}&body=${encodeURIComponent(body)}`;
window.location.href = mailtoLink;
                const modalInstance = bootstrap.Modal.getInstance(infoModal);
                modalInstance.hide(); // Chiude il modale.
            });
        }
    });
  </script>

</body>
</html>