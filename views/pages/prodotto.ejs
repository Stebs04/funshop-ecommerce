<!doctype html>
<html lang="it">
<%- include('../partials/header') %>
<body class="d-flex flex-column min-vh-100">

  <%- include('../partials/navbar') %>

  <main class="container my-5">
    <% if (prodotto) { %>
    <div class="row g-5">

      <div class="col-md-7">
        <img src="<%= prodotto.percorso_immagine %>" class="img-fluid rounded shadow-sm mb-3" alt="Immagine principale del prodotto">
        
        <!-- Thumbnail non implementati dinamicamente per ora -->
        <div class="row g-2">
          <!-- <div class="col-3">
            <img src="https://placehold.co/200x200/E95793/white" class="img-fluid rounded" alt="Thumbnail 1">
          </div> -->
        </div>
      </div>

      <div class="col-md-5">
        <div class="card p-4 shadow-sm">
          <h1 class="display-5 fw-bold">â‚¬ <%= prodotto.prezzo || prodotto.prezzo_asta %></h1>
          <h2><%= prodotto.nome %></h2>
          <hr>
          
          <ul class="list-unstyled mb-4">
            <li class="d-flex justify-content-between"><span>CONDIZIONI:</span><strong><%= prodotto.condizione %></strong></li>
            <li class="d-flex justify-content-between"><span>CATEGORIA:</span><strong><%= prodotto.parola_chiave %></strong></li>
          </ul>

          <h5 class="fw-bold">Descrizione</h5>
          <p class="text-muted"><%= prodotto.descrizione %></p>
          <hr>
          
          <div class="d-flex align-items-center mb-4">
            <img src="<%= prodotto.immagine_profilo ? prodotto.immagine_profilo : '/immagini/avatardefault_92824.png' %>" alt="Avatar venditore" width="48" height="48" class="rounded-circle me-3">
            <div>
              <h6 class="mb-0 fw-bold"><%= prodotto.nome_venditore %></h6>
              <!-- Recensioni non implementate -->
            </div>
          </div>

          <a href="#" class="btn btn-primary btn-lg w-100 mb-2">Acquista</a>
          <a href="#" class="btn btn-outline-secondary w-100 mb-2"><i class="bi bi-star me-2"></i>Osserva prodotto</a>
          <% if (prodotto.prezzo_asta) { %>
          <a href="#" class="btn btn-outline-primary w-100 mb-2">Fai un'offerta</a>
          <% } %>
          <a href="#" class="btn btn-outline-secondary w-100">Chiedi informazioni</a>
        </div>
      </div>
    </div>
    <% } else { %>
      <div class="alert alert-danger" role="alert">
        Prodotto non trovato.
      </div>
    <% } %>
  </main>

  <%- include('../partials/footer') %>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>