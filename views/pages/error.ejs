<%# views/pages/error.ejs %>
<%# Pagina di errore generica, tipicamente usata per errori 404 (Pagina Non Trovata). %>

<!doctype html>
<html lang="it">
<%- include('../partials/header') %>

<body class="d-flex flex-column min-vh-100">
  <%- include('../partials/navbar') %>

  <main class="container my-5 text-center">
    <div class="row justify-content-center">
      <div class="col-md-8">
        <h1 class="display-1 fw-bold">404</h1>
        <h2 class="mb-4">Pagina Non Trovata</h2>
        <p class="lead mb-4">
          Oops! Sembra che la pagina che stai cercando non esista o sia stata spostata.
        </p>

        <%# Questo blocco opzionale puÃ² mostrare un messaggio di errore specifico se viene passato dalla rotta. %>
        <%# `locals.error` controlla se la variabile `error` esiste nel contesto della vista. %>
        <% if (locals.error && error.length > 0) { %>
            <div class="alert alert-danger" role="alert">
                <%= error %>
            </div>
        <% } %>

        <a href="/" class="btn btn-primary btn-lg">Torna alla Homepage</a>
      </div>
    </div>
  </main>

  <%- include('../partials/footer') %>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>